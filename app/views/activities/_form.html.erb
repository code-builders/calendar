<%= render "layouts/errors", :object => @activity %>

<%= bootstrap_form_for [@day, @activity], remote: true do |f| %>
  <div class="form-group">
    <%= f.date_field :start_time %>
  </div>
  <div class="form-group">
    <%= f.date_field :end_time %>
  </div>
  <div class="form-group">
    <%= f.url_field :url %>
  </div>
  <div class="form-group">
    <%= f.text_area :text, :rows => 12, :cols => 75  %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit Activity" %>
  </div>
<% end %>
