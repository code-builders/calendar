<div class='controls'>
  <%= link_to "<i class='fa fa-arrow-left'></i> Yesterday".html_safe, day_path(@day.yesterday), class: "pull-left" %>
  <%= link_to "Tomorrow <i class='fa fa-arrow-right'></i>".html_safe, day_path(@day.tomorrow), class: "pull-right" %>
  <%= link_to "<i class='fa fa-calendar'></i>".html_safe, all_days_path, class: "pull-center" %>
</div>
<% if @day.persisted? %>
  <article class='day'>
    <div class='body'>
      <%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_day_path(@day), class: "pull-right" %>
      <h1>
        <%= date_to_s @day.date %>
      </h1>
      <div>
        <%= markdown @day.body %>
      </div>
      <div class='schedule'>
        <h2 class='title'>
          Schedule
          <%= link_to "<i class='fa fa-plus'></i>".html_safe, "#", class: "show pull-right", data: {target: ".new-schedule"} %>
        </h2>
        <table>
          <% @day.activities.each do |act| %>
            <tr>
              <td width="120px"><%= act.start.strftime("%l:%M %p") %></td>
              <td width="120px"><%= act.end.strftime("%l:%M %p") %></td>
              <td><%= link_to_if act.url.present?, act.body, act.url %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </article>
  <div class='new-schedule hide'>
    <%= form_for [@day, Activity.new] do |f| %>
      <%= f.hidden_field :day_id, value: @day.id %>
      <div class='form-group'>
        <%= f.time_select :start, minute_step: 5, ampm: true, start_hour: 8, end_hour: 22 %>
        <%= f.label :end, "-" %>
        <%= f.time_select :end, minute_step: 5, ampm: true, start_hour: 8, end_hour: 22 %>
      </div>
      <div class='form-group'>
        <%= f.label :body %>
        <%= f.text_field :body %>
      </div>
      <div class='form-group'>
        <%= f.label :url %>
        <%= f.text_field :url %>
      </div>

      <%= f.submit %>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-notice">
    There is not a schedule for this day yet...
  </div>
<% end %>
