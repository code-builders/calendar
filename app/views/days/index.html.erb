<div class="col-md-12">
  <div class="row">
    <h1>Lessons</h1>
    <br>
      <div class="search">
        <%=  form_tag days_path, class: "form-inline", method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control" %>

        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% if params[:query].present? %>

        <%= link_to "clear", days_path %>
      <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="row">
      <div class="list-days">
        <% @days.each do |day| %>
          <p><%= link_to day.date.strftime("%m/%d/%Y"), day_path(day), {:style=>'color:#000000;', :class => "css_class" } %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-12">
   <div class="row">
      <h1> <%= link_to "Return to Today's lesson", root_path  %>
    </div>
  </div>
</div>
